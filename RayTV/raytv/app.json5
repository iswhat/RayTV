{
  "package": "com.raytv.app",
  "name": "RayTV",
  "versionName": "1.0.0",
  "versionCode": 1,
  "minAPIVersion": 9,
  "targetAPIVersion": 9,
  "description": "一个功能强大的视频播放应用",
  "icon": "$media:app_icon",
  "splashscreen": {
    "image": "./assets/splash.png",
    "color": "#ffffff"
  },
  "orientation": ["portrait"],
  "modules": [
    {
      "name": "raytv",
      "srcEntry": "./src/main/ets",
      "description": "RayTV主模块"
    }
  ],
  "abilities": [
    {
      "name": "MainAbility",
      "srcEntrance": "./src/main/ets/MainAbility.ts",
      "description": "应用主入口",
      "icon": "$media:app_icon",
      "label": "RayTV",
      "orientation": "portrait",
      "launchType": "standard",
      "formsEnabled": false,
      "exported": true,
      "skills": [
        {
          "entities": ["entity.system.home"],
          "actions": ["action.system.home"],
          "uris": []
        }
      ],
      "permissions": [
        {
          "name": "ohos.permission.INTERNET"
        },
        {
          "name": "ohos.permission.READ_MEDIA"
        },
        {
          "name": "ohos.permission.WRITE_MEDIA"
        },
        {
          "name": "ohos.permission.GET_NETWORK_INFO"
        },
        {
          "name": "ohos.permission.DISTRIBUTED_DATASYNC"
        },
        {
          "name": "ohos.permission.ACCESS_DISTRIBUTED_SERVICE"
        }
      ]
    },
    {
      "name": "raytvbackupability.RayTVBackupAbility",
      "srcEntrance": "./src/main/ets/raytvbackupability/RayTVBackupAbility.ets",
      "description": "RayTV应用备份还原能力",
      "exported": true,
      "type": "extension"
    }
  ],
  "distributedNotificationEnabled": false,
  "defaultColorMode": "automatic",
  "requestPermissions": [
    {
      "name": "ohos.permission.INTERNET",
      "reason": "$string:permission_internet"
    },
    {
      "name": "ohos.permission.GET_NETWORK_INFO",
      "reason": "$string:permission_get_network_info"
    },
    {
      "name": "ohos.permission.DISTRIBUTED_DATASYNC",
      "reason": "$string:permission_distributed_datasync",
      "usedScene": {
        "abilities": ["MainAbility"],
        "when": "inuse"
      }
    },
    {
      "name": "ohos.permission.ACCESS_DISTRIBUTED_SERVICE",
      "reason": "$string:permission_access_distributed_service",
      "usedScene": {
        "abilities": ["MainAbility"],
        "when": "inuse"
      }
    }
  ],
  "deviceConfig": {
    "default": {
      "allowAppDataRestore": true,
      "keepAlive": false
    }
  },
  "buildFeatures": {
    "persistentStorage": true,
    "shareable": false
  }
}