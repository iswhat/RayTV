{
  "package": "com.raytv.app",
  "name": "RayTV",
  "versionName": "1.0.0",
  "versionCode": 1,
  "minAPIVersion": 9,
  "targetAPIVersion": 10,
  "description": "一个功能强大的视频播放应用",
  "icon": "./assets/icon.png",
  "splashscreen": {
    "image": "./assets/splash.png",
    "color": "#ffffff"
  },
  "orientation": ["portrait"],
  "modules": [],
  "abilities": [
    {
      "name": "raytvability.RaytvAbility",
      "srcEntrance": "./src/main/ets/raytvability/RaytvAbility.ets",
      "description": "应用主入口",
      "icon": "./assets/icon.png",
      "label": "RayTV",
      "orientation": "portrait",
      "launchType": "standard",
      "formsEnabled": false,
      "exported": true,
      "skills": [
        {
          "entities": ["entity.system.home"],
          "actions": ["action.system.home"],
          "uris": []
        }
      ],
      "permissions": [
        {
          "name": "ohos.permission.INTERNET"
        },
        {
          "name": "ohos.permission.READ_MEDIA"
        },
        {
          "name": "ohos.permission.WRITE_MEDIA"
        },
        {
          "name": "ohos.permission.GET_NETWORK_INFO"
        }
      ]
    },
    {
      "name": "raytvbackupability.RayTVBackupAbility",
      "srcEntrance": "./src/main/ets/raytvbackupability/RayTVBackupAbility.ts",
      "description": "RayTV应用备份还原能力",
      "exported": true,
      "type": "extension"
    }
  ],
  "distributedNotificationEnabled": false,
  "defaultColorMode": "automatic",
  "requestPermissions": [
    {
      "name": "ohos.permission.INTERNET"
    }
  ],
  "deviceConfig": {
    "default": {
      "allowAppDataRestore": true,
      "keepAlive": false
    }
  },
  "buildFeatures": {
    "persistentStorage": true,
    "shareable": false
  }
}