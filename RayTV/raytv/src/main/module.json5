{
  "module": {
    "name": "raytv",
    "type": "entry",
    "description": "$string:module_desc",
    "mainElement": "MainAbility",
    "deviceTypes": [
      "phone",
      "tablet",
      "2in1",
      "tv"
    ],
    "deliveryWithInstall": true,
    "installationFree": false,
    "pages": "$profile:main_pages",
    "abilities": [
      {
        "name": "MainAbility",
        "srcEntry": "./ets/MainAbility.ets",
        "description": "$string:RaytvAbility_desc",
        "icon": "$media:layered_image",
        "label": "$string:app_name",
        "startWindowIcon": "$media:startIcon",
        "startWindowBackground": "$color:start_window_background",
        "exported": true,
        "skills": [
          {
            "entities": [
              "entity.system.home"
            ],
            "actions": [
              "ohos.want.action.home"
            ]
          }
        ]
      }
    ],
    "extensionAbilities": [
      {
        "type": "backup",
        "name": "raytvbackupability.RayTVBackupAbility",
        "srcEntrance": "./ets/raytvbackupability/RayTVBackupAbility.ets",
        "exported": true,
        "metadata": [
          {
            "name": "ohos.extension.backup.config",
            "resource": "$profile:backup_config"
          }
        ]
      }
    ],
    "definePermissions": [
      {
        "name": "ohos.permission.DISTRIBUTED_DATASYNC",
        "grantMode": "user_grant",
        "availableLevel": "system_basic",
        "label": "$string:permission_distributed_datasync_label",
        "description": "$string:permission_distributed_datasync_desc"
      },
      {
        "name": "ohos.permission.ACCESS_DISTRIBUTED_SERVICE",
        "grantMode": "user_grant",
        "availableLevel": "system_basic",
        "label": "$string:permission_access_distributed_service_label",
        "description": "$string:permission_access_distributed_service_desc"
      }
    ],
    "requestPermissions": [
      {
        "name": "ohos.permission.INTERNET",
        "reason": "$string:permission_internet"
      },
      {
        "name": "ohos.permission.GET_NETWORK_INFO",
        "reason": "$string:permission_get_network_info"
      },
      {
        "name": "ohos.permission.DISTRIBUTED_DATASYNC",
        "reason": "$string:permission_distributed_datasync",
        "usedScene": {
          "abilities": ["MainAbility"],
          "when": "inuse"
        }
      },
      {
        "name": "ohos.permission.ACCESS_DISTRIBUTED_SERVICE",
        "reason": "$string:permission_access_distributed_service",
        "usedScene": {
          "abilities": ["MainAbility"],
          "when": "inuse"
        }
      }
    ]
  }
}