  }
  
  /**
   * æ¸²æŸ“åª’ä½“åˆ—è¡¨ | Render media list
   */
  @Builder
  private renderMediaSection(title: string, mediaList: MediaItem[]) {
    Column() {
      Row() {
        Text(title)
          .fontSize(20)
          .fontWeight(700)
          .fontColor('#333333')
          .margin({ left: 30 })
        
        Button('æŸ¥çœ‹æ›´å¤š')
          .fontSize(14)
          .fontColor('#4CAF50')
          .backgroundColor('transparent')
          .margin({ right: 30 })
      }
      .width('100%')
      .justifyContent(FlexAlign.SpaceBetween)
