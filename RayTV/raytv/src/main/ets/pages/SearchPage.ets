      // ÊöÇÊó∂‰ΩøÁî®Ê®°ÊãüÊï∞ÊçÆ
      const history = ['Â§ç‰ªáËÄÖËÅîÁõü', 'Êµ∑Ë¥ºÁéã', 'ÊòüÈôÖÁ©øË∂ä'];
