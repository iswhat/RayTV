        mediaId: media.id,
        siteKey: media.siteKey || '',
        title: media.title || '',
        coverUrl: media.coverUrl || '',
        description: media.description || '',
        year: media.year || '',
        type: media.type || '',
        score: media.score || '',
        directors: media.directors || [],
