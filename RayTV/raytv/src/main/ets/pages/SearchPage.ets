      // é™åˆ¶ç»“æœæ•°é‡ï¼Œé¿å…æ˜¾ç¤ºè¿‡å¤š
      this.quickSearchResults = this.quickSearchResults.slice(0, 10);
      
      // æ˜¾ç¤ºå¿«é€Ÿæœç´¢ç»“æœ
      this.showSourceList = true;
